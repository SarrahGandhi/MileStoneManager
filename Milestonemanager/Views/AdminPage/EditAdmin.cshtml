@model AdminDto

<h2>Edit Admin</h2>
<form asp-action="EditAdmin" method="post">
    <input type="hidden" asp-for="AdminId" />

    <div class="form-group">
        <label asp-for="AdminName"></label>
        <input asp-for="AdminName" class="form-control" />
        <span asp-validation-for="AdminName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AdminPhone"></label>
        <input asp-for="AdminPhone" class="form-control" />
        <span asp-validation-for="AdminPhone" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AdminCategory"></label>
        <input asp-for="AdminCategory" class="form-control" />
        <span asp-validation-for="AdminCategory" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="ListAdmin" class="btn btn-secondary">Cancel</a>
</form>
