@model IEnumerable<Milestonemanager.Models.GuestDto>

@{
    ViewData["Title"] = "Index";
}

<h1 class="page-title">List Guests</h1>

<div class="button-container">
    <a asp-action="Create" class="btn">Create New</a>
</div>
<div class="table-container">
    <table class="styled-table">
        <thead>
            <tr>

                <th>Name</th>
                <th>Location</th>
                <th>Address</th>
                <th>Invitation Sent</th>
                <th>Category</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.GuestName)</td>
                    <td>@Html.DisplayFor(modelItem => item.GuestLocation)</td>
                    <td>@Html.DisplayFor(modelItem => item.GuestAddress)</td>
                    <td>@Html.DisplayFor(modelItem => item.IsInvited)</td>
                    <td>@Html.DisplayFor(modelItem => item.GuestCategory)</td>
                    <td><a asp-action="Edit" asp-route-id="@item.GuestId" class="edit-btn">✏️</a>
                        <a asp-action="Delete" asp-route-id="@item.GuestId" class="delete-btn">🗑</a>
                        <a asp-action="Details" asp-route-id="@item.GuestId" class="details-btn">📋</a>
                    </td>
                </tr>


            }
        </tbody>
    </table>
</div>
