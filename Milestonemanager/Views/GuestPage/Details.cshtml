@model IEnumerable<Milestonemanager.Models.EventGuestDto>
@{
    var GuestName = ViewData["GuestName"] as String;
    var EventGuestList = ViewData["EventGuest"] as List<EventGuestDto>;
    var EventList = ViewData["EventList"] as List<Milestonemanager.Models.Event>;
}
<h1 class="page-title">List Event Guest</h1>
<div class="button-container">
    <a asp-action="Create" class="btn">Create New</a>
</div>
<h1>@GuestName</h1>
<div class="table-container">
    <table class="styled-table">
        <thead>
            <tr>
                <th>Event Name</th>
                <th>Women Invited</th>
                <th>Men Invited</th>
                <th>Kids Invited</th>
                <th>IsRSVPAccepted</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in EventGuestList)
            {
                <tr>
                    <td>@EventList?.FirstOrDefault(x => x.EventId == item.EventId)?.EventName</td>
                    <td>@Html.DisplayFor(modelItem => item.EventWomen)</td>
                    <td>@Html.DisplayFor(modelItem => item.EventMen)</td>
                    <td>@Html.DisplayFor(modelItem => item.EventKids)</td>
                    <td>@Html.DisplayFor(modelItem => item.IsRSVPAccepted)</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<style>
    /* Reuse existing styling */
    body {
        background: #EFE5DC;

    }

    .page-title {
        color: #000;
        font-size: 1.8rem;
        margin-bottom: 2rem;
        text-align: center;
    }

    .button-container {
        margin-bottom: 2rem;
        text-align: right;
    }

    /* Table styling matching previous implementations */
    .table-container {
        width: 100%;
        max-width: 1000px;
        margin: auto;
        padding: 20px 0;
    }

    .styled-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        border-radius: 31px;
        overflow: hidden;
        background: linear-gradient(153deg, #FBFEFB 31.55%, #EFE5DC 98.87%);
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        margin-bottom: 2rem;
    }

    .styled-table thead th {
        background: #B08B6F;
        color: white;
        padding: 12px 15px;
        text-align: left;
        font-weight: bold;
    }

    .styled-table tbody td {
        padding: 12px 15px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.5);
    }

    .styled-table tbody tr:hover {
        background: linear-gradient(to right, #fff7ef, #ebdbce);
    }

    /* Button styling */
    .btn {
        padding: 10px 20px;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: 0.3s;
        text-decoration: none;
        display: inline-block;
        font-weight: bold;
    }

    .btn-primary {
        background: #d9b497;
        color: white;
    }

    .btn-secondary {
        background: #B08B6F;
        color: white;
    }

    .btn:hover {
        opacity: 0.9;
    }

    h1 {
        color: #000;
        font-size: 1.5rem;
        margin-bottom: 1.5rem;
    }
</style>