@model EventTaskDto

@{
    ViewData["Title"] = "Delete Event Task";
}

<h2>Delete Event Task</h2>

<p>Are you sure you want to delete this event task?</p>

<div>
    <strong>Task Description:</strong> @Model.TaskDescription <br />
    <strong>Event ID:</strong> @Model.EventId <br />
    <strong>Due Date:</strong> @Model.DueDate.ToString("yyyy-MM-dd") <br />
    <strong>Completed:</strong> @(Model.IsCompleted ? "Yes" : "No") <br />
    <strong>Category:</strong> @Model.EventTaskCategory <br />
</div>

<form asp-action="DeleteEventTask" method="post">
    <input type="hidden" asp-for="TaskId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="ListEventTask" class="btn btn-secondary">Cancel</a>
</form>
